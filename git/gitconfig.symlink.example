[user]
  name = GIT_USER_NAME
  email = GIT_USER_EMAIL

[credential]
  helper = osxkeychain

[core]
  excludesfile = ~/.gitignore_global
  editor = nvim
  autocrlf = input
  pager = diff-so-fancy | less --tabs=4 -RFX

[mergetool]
  keepBackup = false

[color]
  ui = true

[apply]
  whitespace = nowarn

[alias]
  co = checkout
  po = pull origin
  pso = push origin
  cm = commit -m
  br = branch
  st = status
  hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
  dns = diff --ignore-space-change
  dc = diff --cached
